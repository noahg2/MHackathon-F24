{
  "name": "JavaScript and Python Dev Container",
  "dockerComposeFile": "compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces",
  "forwardPorts": [8000, 5173],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
    // "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "postCreateCommand": {
    "pip-install": "pip install --user -r backend/requirements-dev.txt && cd frontend/learning",
    "npm-install": "cd frontend/learning && npm install"
    // "disable-ipv6": "sysctl -w net.ipv6.conf.all.disable_ipv6=1"
  },
  "remoteUser": "vscode"
  // "runArgs": [
  //   // "--sysctl",
  //   // "net.ipv6.conf.all.disable_ipv6=1",
  //   "--env-file",
  //   ".env"
  // ]
}
